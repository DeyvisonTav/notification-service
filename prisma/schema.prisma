generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notifications {
  id          String    @id
  recipientId String
  content     String
  category    String
  readAt      DateTime?
  createdAt   DateTime  @default(now())

  @@index([recipientId])
}

model OrderSummary {
  id          String   @id
  coffee      String
  description String
  amount      Int
  price       Int
  createdAt   DateTime

  Order   Order?  @relation(fields: [orderId], references: [id])
  orderId String?
}

model Order {
  id          String   @id
  paymentType String
  address     String
  totalPrice  Int
  createdAt   DateTime
  draft       Boolean

  ordersumary OrderSummary[]
}
